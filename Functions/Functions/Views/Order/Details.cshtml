@model Functions.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-dark">
                <div class="card-header text-white text-center" style="background-color:black;">
                    <h3 class="mb-0">Order Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Timestamp</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Timestamp)</dd>

                        <dt class="col-sm-4 fw-bold">Customer Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

                        <dt class="col-sm-4 fw-bold">Customer Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerEmail)</dd>

                        <dt class="col-sm-4 fw-bold">Product Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                        <dt class="col-sm-4 fw-bold">Quantity</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                        <dt class="col-sm-4 fw-bold">Unit Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>

                        <dt class="col-sm-4 fw-bold">Total Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalPrice)</dd>

                        <dt class="col-sm-4 fw-bold">Order Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>
                    </dl>

                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-dark btn-lg">Back to Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: all 0.2s ease;
    }

    .card dl dt {
        color: black;
    }

    .card dl dd {
        color: #333;
    }

    .card-footer a:hover {
        text-decoration: underline;
    }
</style>
