@model Functions.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-dark">
                <div class="card-header text-white text-center" style="background-color:black;">
                    <h3 class="mb-0">Customer Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Full Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer_Name)</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">Phone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4 fw-bold">Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                        <dt class="col-sm-4 fw-bold">Created / Timestamp</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Timestamp)</dd>
                    </dl>
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-dark btn-lg">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: all 0.2s ease;
    }

    .card dl dt {
        color: black;
    }

    .card dl dd {
        color: #333;
    }

    .card-footer a:hover {
        text-decoration: underline;
    }
</style>
