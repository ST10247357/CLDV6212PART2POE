@model Functions.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-dark">
                <div class="card-header text-white text-center" style="background-color:black;">
                    <h3 class="mb-0">Edit Customer</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="PartitionKey" />
                        <input type="hidden" asp-for="RowKey" />
                        <input type="hidden" asp-for="ETag" />

                        <div class="mb-3">
                            <label asp-for="Customer_Name" class="form-label fw-bold">Full Name</label>
                            <input asp-for="Customer_Name" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="Customer_Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Timestamp" class="form-label fw-bold">Timestamp</label>
                            <input asp-for="Timestamp" class="form-control" readonly />
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-dark btn-lg">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: all 0.2s ease;
    }

    .form-control {
        border: 1px solid #000;
    }

    .card-footer a:hover {
        text-decoration: underline;
    }
</style>
