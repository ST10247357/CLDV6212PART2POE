@model List<FileModel>

<h2>All Files</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>File Name</th>
                <th>Size (Bytes)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Name</td>
                    <td>@file.Size</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="fileActionsMenu_@file.Name" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="fileActionsMenu_@file.Name">
                                <li>
                                    <a class="dropdown-item" asp-action="DownloadFile" asp-route-directoryName="uploads" asp-route-fileName="@file.Name"> Download </a>
                                </li>
                                <li>
                                    <form asp-action="DeleteFile" method="post" style="display:inline;">
                                        <input type="hidden" name="fileName" value="@file.Name" />
                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files found.</p>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
