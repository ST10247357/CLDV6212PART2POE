@model List<Functions.Models.FileModel>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-dark">
                <div class="card-header text-white text-center" style="background-color:black;">
                    <h3 class="mb-0">Upload Files</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-controller="Customer" asp-action="Create" class="btn btn-secondary">&larr; Back to Create Customer</a>
                    </div>
                    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label fw-bold">Choose a file to upload:</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg">Upload File</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: all 0.2s ease;
    }

    .form-control {
        border: 1px solid #000;
    }

    .card-footer a:hover {
        text-decoration: underline;
    }
</style>
